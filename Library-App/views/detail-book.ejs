                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                                <i class="far fa-star"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Related Book 3 -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                        <div class="h-40 bg-yellow-100 flex items-center justify-center">
                            <i class="fas fa-book text-5xl text-yellow-600"></i>
                        </div>
                        <div class="p-4">
                            <h3 class="font-semibold mb-1">Jungle Quest</h3>
                            <p class="text-gray-600 text-sm mb-2">Alice Green</p>
                            <div class="flex items-center text-yellow-400 text-xs">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Related Book 4 -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                        <div class="h-40 bg-purple-100 flex items-center justify-center">
                            <i class="fas fa-book text-5xl text-purple-600"></i>
                        </div>
                        <div class="p-4">
                            <h3 class="font-semibold mb-1">Ocean Mysteries</h3>
                            <p class="text-gray-600 text-sm mb-2">David Wilson</p>
                            <div class="flex items-center text-yellow-400 text-xs">
