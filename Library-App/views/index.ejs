<!-- Header -->
<%- include('layouts/header') %>
    <!-- Navbar -->
    <%- include('layouts/navbar') %>

        <!-- Hero Section -->
        <div class="bg-blue-600 text-white">
            <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
                <div class="md:flex justify-between items-center">
                    <div class="md:w-1/2 mb-8 md:mb-0">
                        <h1 class="text-4xl font-bold mb-4">Discover Your Next Favorite Book</h1>
                        <p class="text-lg mb-6">Explore our collection of thousands of books from various genres and
                            authors.</p>
                        <div class="flex">
                            <input type="text" placeholder="Search books..."
                                class="px-4 py-2 rounded-l-lg w-full focus:outline-none text-gray-800">
                            <button class="bg-blue-800 px-6 py-2 rounded-r-lg hover:bg-blue-900 transition">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="hidden md:block md:w-1/2 text-center">
                        <i class="fas fa-book-open text-8xl opacity-30"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Featured Books -->
            <section class="mb-12">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold text-gray-800">Featured Books</h2>
                    <a href="#" class="text-blue-600 hover:underline">View all</a>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    <!-- Book Card 1 -->
                    <% books.forEach(book=> { %>
                        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                            <div class="h-48 bg-blue-100 flex items-center justify-center">
                                <img src="<%= book.coverPath %>" alt="<%= book.title %>" class="h-full">
                            </div>
                            <div class="p-4">
                                <h3 class="font-semibold text-lg mb-1">
                                    <%= book.title %>
                                </h3>
                                <p class="text-gray-600 text-sm mb-2">
                                    <%= book.author %>
                                </p>
                                <div class="flex items-center mb-3">
                                    <div class="flex text-yellow-400">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                    </div>
                                    <span class="text-gray-600 text-sm ml-2">(124)</span>
                                </div>
                                <a href="/book/<%= book.title.toLowerCase().replace(/\s+/g, '-') %>/<%= book.id %>"
                                    class="flex items-center justify-center w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition">
                                    <i class="fa-solid fa-book-open mr-1"></i> See Details
                                </a>
                            </div>
                        </div>
                        <% }) %>

                </div>
            </section>

            <!-- Categories -->
            <section class="mb-12">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Browse by Category</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
                    <a href="#" class="bg-white p-4 rounded-lg shadow-sm text-center hover:shadow-md transition">
                        <i class="fas fa-atom text-3xl text-blue-600 mb-2"></i>
                        <p class="font-medium">Science</p>
                    </a>
                    <a href="#" class="bg-white p-4 rounded-lg shadow-sm text-center hover:shadow-md transition">
                        <i class="fas fa-laptop-code text-3xl text-green-600 mb-2"></i>
                        <p class="font-medium">Technology</p>
                    </a>
                    <a href="#" class="bg-white p-4 rounded-lg shadow-sm text-center hover:shadow-md transition">
                        <i class="fas fa-landmark text-3xl text-yellow-600 mb-2"></i>
                        <p class="font-medium">History</p>
                    </a>
                    <a href="#" class="bg-white p-4 rounded-lg shadow-sm text-center hover:shadow-md transition">
                        <i class="fas fa-heart text-3xl text-red-600 mb-2"></i>
                        <p class="font-medium">Romance</p>
                    </a>
                    <a href="#" class="bg-white p-4 rounded-lg shadow-sm text-center hover:shadow-md transition">
                        <i class="fas fa-ghost text-3xl text-purple-600 mb-2"></i>
                        <p class="font-medium">Horror</p>
                    </a>
                    <a href="#" class="bg-white p-4 rounded-lg shadow-sm text-center hover:shadow-md transition">
                        <i class="fas fa-child text-3xl text-pink-600 mb-2"></i>
                        <p class="font-medium">Children</p>
                    </a>
                </div>
            </section>

            <!-- Recently Added -->
            <section>
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold text-gray-800">Recently Added</h2>
                    <a href="#" class="text-blue-600 hover:underline">View all</a>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Book 1 -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden flex hover:shadow-lg transition">
                        <div class="w-1/3 bg-blue-100 flex items-center justify-center">
                            <i class="fas fa-book text-4xl text-blue-600"></i>
                        </div>
                        <div class="w-2/3 p-4">
                            <h3 class="font-semibold text-lg mb-1">New Frontiers</h3>
                            <p class="text-gray-600 text-sm mb-2">Michael Brown</p>
                            <div class="flex items-center mb-3">
                                <div class="flex text-yellow-400">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                </div>
                                <span class="text-gray-600 text-sm ml-2">(42)</span>
                            </div>
                            <button class="text-blue-600 text-sm hover:underline">
                                <i class="fas fa-info-circle mr-1"></i>Details
                            </button>
                        </div>
                    </div>

                    <!-- Book 2 -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden flex hover:shadow-lg transition">
                        <div class="w-1/3 bg-green-100 flex items-center justify-center">
                            <i class="fas fa-book text-4xl text-green-600"></i>
                        </div>
                        <div class="w-2/3 p-4">
                            <h3 class="font-semibold text-lg mb-1">Data Science 101</h3>
                            <p class="text-gray-600 text-sm mb-2">Sarah Davis</p>
                            <div class="flex items-center mb-3">
                                <div class="flex text-yellow-400">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                    <i class="far fa-star"></i>
                                </div>
                                <span class="text-gray-600 text-sm ml-2">(37)</span>
                            </div>
                            <button class="text-blue-600 text-sm hover:underline">
                                <i class="fas fa-info-circle mr-1"></i>Details
                            </button>
                        </div>
                    </div>

                    <!-- Book 3 -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden flex hover:shadow-lg transition">
                        <div class="w-1/3 bg-purple-100 flex items-center justify-center">
                            <i class="fas fa-book text-4xl text-purple-600"></i>
                        </div>
                        <div class="w-2/3 p-4">
                            <h3 class="font-semibold text-lg mb-1">Mystery Tales</h3>
                            <p class="text-gray-600 text-sm mb-2">David Wilson</p>
                            <div class="flex items-center mb-3">
                                <div class="flex text-yellow-400">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                </div>
                                <span class="text-gray-600 text-sm ml-2">(68)</span>
                            </div>
                            <button class="text-blue-600 text-sm hover:underline">
                                <i class="fas fa-info-circle mr-1"></i>Details
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        <!-- Footer -->
        <%- include('layouts/footer') %>