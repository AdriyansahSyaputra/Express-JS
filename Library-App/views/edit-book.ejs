<%- include('layouts/header') %>
    <%- include('layouts/navbar') %>

        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Header -->
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-2xl font-bold text-gray-800">
                    <i class="fas fa-edit text-blue-600 mr-2"></i> Edit Informasi Buku
                </h1>
                <button onclick="history.back()" type="button" class="text-blue-600 hover:text-blue-800">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <!-- Edit Form -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <form>
                    <div class="md:flex">
                        <!-- Left Column - Book Cover -->
                        <div class="md:w-1/3 p-8 bg-gray-50">
                            <div class="mb-6">
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-image mr-2 text-blue-600"></i> Sampul Buku
                                </label>
                                <div
                                    class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg">
                                    <div class="space-y-1 text-center">
                                        <div class="flex text-sm text-gray-600">
                                            <label
                                                class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none">
                                                <span>Upload file</span>
                                                <input type="file" class="sr-only">
                                            </label>
                                            <p class="pl-1">atau drag and drop</p>
                                        </div>
                                        <p class="text-xs text-gray-500">
                                            PNG, JPG, GIF up to 2MB
                                        </p>
                                    </div>
                                </div>
                                <div class="mt-4 flex justify-center">
                                    <img src="https://images.unsplash.com/photo-1544947950-fa07a98d237f?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                                        alt="Current Cover" class="h-40 object-contain rounded-lg shadow">
                                </div>
                            </div>
                        </div>

                        <!-- Right Column - Form Fields -->
                        <div class="md:w-2/3 p-8">
                            <!-- Basic Information -->
                            <div class="mb-8">
                                <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">
                                    <i class="fas fa-info-circle text-blue-600 mr-2"></i> Informasi Dasar
                                </h3>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <!-- Judul Buku -->
                                    <div class="col-span-2">
                                        <label for="judul" class="block text-sm font-medium text-gray-700 mb-1">
                                            Judul Buku <span class="text-red-500">*</span>
                                        </label>
                                        <input type="text" id="judul" name="judul" required
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                                            value="<%= book.title %>">
                                    </div>

                                    <!-- Penulis -->
                                    <div>
                                        <label for="penulis" class="block text-sm font-medium text-gray-700 mb-1">
                                            Penulis <span class="text-red-500">*</span>
                                        </label>
                                        <input type="text" id="penulis" name="penulis" required
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                                            value="<%= book.author %>">
                                    </div>

                                    <!-- Tahun Terbit -->
                                    <div>
                                        <label for="tahun" class="block text-sm font-medium text-gray-700 mb-1">
                                            Tahun Terbit <span class="text-red-500">*</span>
                                        </label>
                                        <input type="number" id="tahun" name="tahun" value="<%= book.year %>" step="1"
                                            min="1900" max="2099" required
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                                    </div>

                                    <!-- Penerbit -->
                                    <div>
                                        <label for="penerbit" class="block text-sm font-medium text-gray-700 mb-1">
                                            Penerbit
                                        </label>
                                        <input type="text" id="penerbit" name="penerbit" value="<%= book.publisher %>"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                                    </div>

                                    <!-- Jumlah Halaman -->
                                    <div>
                                        <label for="halaman" class="block text-sm font-medium text-gray-700 mb-1">
                                            Jumlah Halaman
                                        </label>
                                        <input type="number" id="halaman" name="halaman" value="<%= book.pages %>"
                                            step="1" min="1"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                                    </div>

                                    <!-- Bahasa -->
                                    <div>
                                        <label for="bahasa" class="block text-sm font-medium text-gray-700 mb-1">
                                            Bahasa
                                        </label>
                                        <select id="bahasa" name="bahasa" class="...">
                                            <option value="indonesia" <%=book.language==='indonesia' ? 'selected' : ''
                                                %>>Indonesia</option>
                                            <option value="inggris" <%=book.language==='inggris' ? 'selected' : '' %>
                                                >Inggris</option>
                                            <option value="lainnya" <%=book.language==='lainnya' ? 'selected' : '' %>
                                                >Lainnya</option>
                                        </select>

                                    </div>

                                    <!-- Format -->
                                    <div>
                                        <label for="format" class="block text-sm font-medium text-gray-700 mb-1">
                                            Format
                                        </label>
                                        <select id="format" name="format" class="...">
                                            <option value="hardcover" <%=book.format==='hardcover' ? 'selected' : '' %>
                                                >Hardcover</option>
                                            <option value="paperback" <%=book.format==='paperback' ? 'selected' : '' %>
                                                >Paperback</option>
                                            <option value="ebook" <%=book.format==='ebook' ? 'selected' : '' %>>E-book
                                            </option>
                                        </select>

                                    </div>
                                </div>
                            </div>

                            <!-- Status & Kategori -->
                            <div class="mb-8">
                                <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">
                                    <i class="fas fa-tags text-blue-600 mr-2"></i> Kategori & Status
                                </h3>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <!-- Status Ketersediaan -->
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">
                                            Status <span class="text-red-500">*</span>
                                        </label>
                                        <div class="space-y-2">
                                            <div class="flex items-center">
                                                <input id="tersedia" name="status" type="radio" value="tersedia"
                                                    <%=book.status==='tersedia' ? 'checked' : '' %>
                                                class="..." /> <label for="tersedia">Tersedia</label>
                                            </div>
                                            <div class="flex items-center">
                                                <input id="tidak-tersedia" name="status" type="radio"
                                                    value="tidak-tersedia" <%=book.status==='tidak-tersedia' ? 'checked'
                                                    : '' %> class="..." />
                                                <label for="tidak-tersedia">Tidak Tersedia</label>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Kategori -->
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">
                                            Kategori
                                        </label>
                                        <div class="flex flex-wrap gap-2">
                                            <% const selectedCategories=book.category || []; %>

                                                <label class="inline-flex items-center">
                                                    <input type="checkbox" name="category" value="Business"
                                                        <%=selectedCategories.includes("Business") ? 'checked' : ''
                                                        %> class="..." />
                                                    <span class="ml-2 text-sm text-gray-700">Business</span>
                                                </label>

                                                <label class="inline-flex items-center">
                                                    <input type="checkbox" name="category" value="Fiksi"
                                                        <%=selectedCategories.includes("Fiksi") ? 'checked' : '' %>
                                                    class="..." />
                                                    <span class="ml-2 text-sm text-gray-700">Fiksi</span>
                                                </label>

                                                <label class="inline-flex items-center">
                                                    <input type="checkbox" name="category" value="Self Help"
                                                        <%=selectedCategories.includes("Self Help") ? 'checked' : ''
                                                        %> class="..." />
                                                    <span class="ml-2 text-sm text-gray-700">Self Help</span>
                                                </label>

                                                <label class="inline-flex items-center">
                                                    <input type="checkbox" name="category" value="Fantasi"
                                                        <%=selectedCategories.includes("Fantasi") ? 'checked' : ''
                                                        %> class="..." />
                                                    <span class="ml-2 text-sm text-gray-700">Fantasi</span>
                                                </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Deskripsi -->
                            <div class="mb-8">
                                <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">
                                    <i class="fas fa-align-left text-blue-600 mr-2"></i> Deskripsi
                                </h3>
                                <label for="deskripsi" class="block text-sm font-medium text-gray-700 mb-1">
                                    Deskripsi Buku <span class="text-red-500">*</span>
                                </label>
                                <textarea id="deskripsi" name="deskripsi" rows="5" required
                                    class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"><%= book.description %></textarea>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex flex-col sm:flex-row gap-4 pt-4 border-t">
                                <button type="submit"
                                    class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition flex-1 flex items-center justify-center">
                                    <i class="fas fa-save mr-2"></i> Simpan Perubahan
                                </button>
                                <button onclick="history.back()" type="button"
                                    class="bg-white border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium py-3 px-6 rounded-lg transition flex-1 flex items-center justify-center">
                                    <i class="fas fa-times mr-2"></i> Batal
                                </button>
                                <button type="button"
                                    class="bg-red-100 hover:bg-red-200 text-red-700 font-medium py-3 px-6 rounded-lg transition flex-1 flex items-center justify-center">
                                    <i class="fas fa-trash-alt mr-2"></i> Hapus Buku
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </main>

        <%- include('layouts/footer') %>