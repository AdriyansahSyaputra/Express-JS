<%- include('layouts/header') %>
    <%- include('layouts/navbar') %>

        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Header -->
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-2xl font-bold text-gray-800">
                    <i class="fas fa-plus text-blue-600 mr-2"></i> Tambah Buku
                </h1>
                <button onclick="history.back()" type="button" class="text-blue-600 hover:text-blue-800">
                    <i class="fas fa-times"></i>
                    </>
            </div>

            <!-- Add Form -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <form action="/add-book" method="POST" enctype="multipart/form-data">
                    <div class="md:flex">
                        <!-- Left Column - Book Cover -->
                        <div class="md:w-1/3 p-8 bg-gray-50">
                            <div class="mb-6">
                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                    <i class="fas fa-image mr-2 text-blue-600"></i> Sampul Buku
                                </label>
                                <div
                                    class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg">
                                    <div class="space-y-1 text-center">
                                        <div class="flex text-sm text-gray-600">
                                            <label
                                                class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none">
                                                <span>Upload file</span>
                                                <input type="file" class="sr-only" name="cover" accept="image/*">
                                            </label>
                                            <p class="pl-1">atau drag and drop</p>
                                        </div>
                                        <p class="text-xs text-gray-500">
                                            PNG, JPG, GIF up to 2MB
                                        </p>
                                    </div>
                                </div>
                                <div class="mt-4 flex justify-center">
                                    <img src="https://images.unsplash.com/photo-1544947950-fa07a98d237f?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80"
                                        alt="Current Cover" class="h-40 object-contain rounded-lg shadow">
                                </div>
                            </div>
                        </div>

                        <!-- Right Column - Form Fields -->
                        <div class="md:w-2/3 p-8">
                            <!-- Basic Information -->
                            <div class="mb-8">
                                <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">
                                    <i class="fas fa-info-circle text-blue-600 mr-2"></i> Informasi Dasar
                                </h3>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <!-- Title Buku -->
                                    <div class="col-span-2">
                                        <label for="title" class="block text-sm font-medium text-gray-700 mb-1">
                                            Title Buku <span class="text-red-500">*</span>
                                        </label>
                                        <input type="text" id="title" name="title" required
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                                    </div>

                                    <!-- Author -->
                                    <div>
                                        <label for="author" class="block text-sm font-medium text-gray-700 mb-1">
                                            Author <span class="text-red-500">*</span>
                                        </label>
                                        <input type="text" id="author" name="author" required
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                                    </div>

                                    <!-- Tahun Terbit -->
                                    <div>
                                        <label for="year" class="block text-sm font-medium text-gray-700 mb-1">
                                            Tahun Terbit <span class="text-red-500">*</span>
                                        </label>
                                        <input type="number" id="year" name="year" min="1900" max="2099" required
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                                    </div>

                                    <!-- Publisher -->
                                    <div>
                                        <label for="publisher" class="block text-sm font-medium text-gray-700 mb-1">
                                            Publisher
                                        </label>
                                        <input type="text" id="publisher" name="publisher"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                                    </div>

                                    <!-- pages -->
                                    <div>
                                        <label for="pages" class="block text-sm font-medium text-gray-700 mb-1">
                                            pages
                                        </label>
                                        <input type="number" id="pages" name="pages" min="1"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                                    </div>

                                    <!-- Language -->
                                    <div>
                                        <label for="language" class="block text-sm font-medium text-gray-700 mb-1">
                                            Language
                                        </label>
                                        <select id="language" name="language"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                                            <option value="indonesia" selected>Indonesia</option>
                                            <option value="inggris">Inggris</option>
                                            <option value="lainnya">Lainnya</option>
                                        </select>
                                    </div>

                                    <!-- Format -->
                                    <div>
                                        <label for="format" class="block text-sm font-medium text-gray-700 mb-1">
                                            Format
                                        </label>
                                        <select id="format" name="format"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                                            <option value="hardcover" selected>Hardcover</option>
                                            <option value="paperback">Paperback</option>
                                            <option value="ebook">E-book</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <!-- Status & Kategori -->
                            <div class="mb-8">
                                <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">
                                    <i class="fas fa-tags text-blue-600 mr-2"></i> Category & Description
                                </h3>

                                <!-- Kategori -->
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        Category
                                    </label>
                                    <div class="flex flex-wrap gap-2">
                                        <label class="inline-flex items-center">
                                            <input type="checkbox" name="category[]" value="Business"
                                                class="h-4 w-4 text-blue-600 rounded border-gray-300">
                                            <span class="ml-2 text-sm text-gray-700">Business</span>
                                        </label>
                                        <label class="inline-flex items-center">
                                            <input type="checkbox" name="category[]" value="Fiksi"
                                                class="h-4 w-4 text-blue-600 rounded border-gray-300">
                                            <span class="ml-2 text-sm text-gray-700">Fiksi</span>
                                        </label>
                                        <label class="inline-flex items-center">
                                            <input type="checkbox" name="category[]" value="Self Help"
                                                class="h-4 w-4 text-blue-600 rounded border-gray-300">
                                            <span class="ml-2 text-sm text-gray-700">Self Help</span>
                                        </label>
                                        <label class="inline-flex items-center">
                                            <input type="checkbox" name="category[]" value="Fantasi"
                                                class="h-4 w-4 text-blue-600 rounded border-gray-300">
                                            <span class="ml-2 text-sm text-gray-700">Fantasi</span>
                                        </label>
                                    </div>

                                </div>
                            </div>

                            <!-- Description -->
                            <div class="mb-8">
                                <h3 class="text-lg font-semibold text-gray-800 mb-4 border-b pb-2">
                                    <i class="fas fa-align-left text-blue-600 mr-2"></i> Description
                                </h3>
                                <label for="description" class="block text-sm font-medium text-gray-700 mb-1">
                                    Description Book <span class="text-red-500">*</span>
                                </label>
                                <textarea id="description" name="description" rows="5" required
                                    class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"></textarea>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex gap-4">
                                <button onclick="history.back()" type="button"
                                    class="bg-red border border-gray-300 hover:bg-gray-100 text-red-700 font-medium py-3 px-6 rounded-lg transition flex-1 flex items-center justify-center">
                                    <i class="fas fa-times mr-2"></i> Batal
                                </button>
                                <button type="submit"
                                    class="bg-green-300 hover:bg-green-400 text-green-700 font-medium py-3 px-6 rounded-lg transition flex-1 flex items-center justify-center">
                                    <i class="fas fa-plus mr-2"></i> Add Book
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </main>

        <%- include('layouts/footer') %>